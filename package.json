{
  "name": "dbs-support-desk",
  "version": "1.0.25",
  "description": "DBS Support Desk Widget",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -p always",
    "build:win": "electron-builder --windows",
    "build:win:nsis": "electron-builder --windows nsis",
    "build:win:portable": "electron-builder --windows portable",
    "build:mac": "electron-builder --mac",
    "build:mac:test": "electron-builder --mac --config.mac.identity=null",
    "build:all": "electron-builder -mwl",
    "publish": "electron-builder -p always"
  },
  "build": {
    "appId": "com.dbs.supportdesk",
    "productName": "DBS Support Desk",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "afterSign": "scripts/notarize.js",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml,.vscode}"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/DBS_Logo.ico",
      "extraFiles": [
        {
          "from": "node_modules/electron/dist/vcruntime140_1.dll",
          "to": ".",
          "filter": [
            "**/*"
          ]
        }
      ],
      "asarUnpack": [
        "**/*.node",
        "**/node_modules/v8-compile-cache/**"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/mac/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "assets/mac/entitlements.mac.plist",
      "entitlementsInherit": "assets/mac/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app requires microphone access for potential voice communication during support sessions.",
        "NSCameraUsageDescription": "This app requires camera access for potential video communication during support sessions.",
        "NSDocumentsFolderUsageDescription": "This app needs access to your documents for attaching files to support tickets."
      },
      "artifactName": "${productName}-${version}-${arch}-test.${ext}"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/DBS_Logo.ico",
      "uninstallerIcon": "assets/DBS_Logo.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "dbsdeskza",
        "repo": "dbs-support-desk",
        "private": false,
        "releaseType": "release"
      }
    ],
    "generateUpdatesFilesForAllChannels": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dbsdeskza/dbs-support-desk.git"
  },
  "keywords": [
    "support",
    "widget",
    "dbs"
  ],
  "author": "DBS Technology",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3",
    "electron-notarize": "^1.2.2",
    "v8-compile-cache": "^2.4.0"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "electron-dl": "^3.0.0",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.1",
    "nodemailer": "^6.9.1",
    "systeminformation": "^5.11.22"
  }
}
